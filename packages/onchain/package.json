{
  "name": "@repo/onchain",
  "version": "0.0.0",
  "private": true,
  "main": "./src",
  "scripts": {
    "check:format": "prettier --write  --list-different ./",
    "check:lint": "eslint ./",
    "check:lint:fix": "eslint --fix ./",
    "check:lint:fix:strict": "eslint --fix --max-warnings 0 ./",
    "check:style": "pnpm run check:format && pnpm run check:lint:fix && pnpm run check:types",
    "check:types": "npx tsc --noEmit",
    "check:types:watch": "pnpm run check:types --watch",
    "fetch-metadata": "node ./src/generateMetadata.mjs",
    "generate-defs": "polkadot-types-from-defs --input ./src/types/chain --package packages/onchain",
    "generate-meta": "polkadot-types-from-chain --endpoint wss://test-dashboard.kylix.finance --output ./src/types/chain --package packages/onchain",
    "generate-types": "npm run fetch-metadata && npm run generate-defs && npm run generate-meta"
  },
  "devDependencies": {
    "@polkadot/typegen": "^15.9.1",
    "@repo/eslint-config": "workspace:*",
    "@repo/shared": "workspace:*",
    "@repo/typescript-config": "workspace:*"
  }
}
