{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "allowArbitraryExtensions": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["testSrc/*"],
      "#/*": ["public/*"],
      "~/*": ["src/*"]
    },
    "noEmit": true
  },
  "include": [
    "src",
    "next-env.d.ts",
    "./i18n.d.ts",
    "./react-app-env.d.ts",
    "../../theme.d.ts",
    ".next/types/**/*.ts",
    "../../global.d.ts"
  ],
  "exclude": ["node_modules"]
}
