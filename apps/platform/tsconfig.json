{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "testSrc/*"
      ],
      "#/*": [
        "public/*"
      ],
      "~/*": [
        "src/*"
      ]
    },
    "noEmit": true
  },
  "include": [
    "src",
    "next-env.d.ts",
    "./react-app-env.d.ts",
    "../../theme.d.ts",
    ".next/types/**/*.ts",
    "../../global.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
